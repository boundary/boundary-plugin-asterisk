{
    "description" : "Provides Asterisk metrics through ARI",
	"command" : "node index.js $(pollInterval)",
	"metrics" : [
		"ACTIVE_CHANNELS"
	],
	"dashboards" : [
        {
            "name" : "asterisk",
            "layout" : "d-w=3&d-h=3&d-pad=5&d-bg=none&d-g-ACTIVE_CHANNELS=0-0-1-1-t"
        }
    ],
	"postExtract" : "npm install ari-client",
	"paramSchema" : [
        {
            "title" : "Asterisk HTTP Server",
            "name" : "server",
            "description" : "i.e. http://127.0.0.1:8088.",
            "type" : "string"
        },
        {
            "title" : "Username",
            "name" : "username",
            "type" : "string"
        },
        {
            "title" : "Password",
            "name" : "password",
            "type" : "password"
        }
    ]
}